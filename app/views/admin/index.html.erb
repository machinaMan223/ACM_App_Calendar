<% if session[:user_id] %>
	<% if User.find(session[:user_id]).admin = true%>
		<h1>Administration</h1>
		<ol>
			<li>
				<%= link_to 'Products', products_url %>
			</li>
			<li>
				<%= link_to 'Orders', orders_url %>
			</li>
			<li>
				<%= link_to 'Events', events_url %>
			</li>
			<li>
				<%= link_to 'Users', users_url %>
			</li>
		</ol>
	<% else %>
		<h1>Not Authorized</h1>
	<% end %>
<% else %>
	<h1>Not Authorized</h1>
<% end %>
