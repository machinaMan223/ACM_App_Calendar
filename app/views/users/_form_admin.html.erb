<div class="ACMApp_form" >
	<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	<div id="error_explanation" >
		<h2><%= pluralize(@user.errors.count, "error") %>
		prohibited this user from being saved:</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<fieldset>
		<legend>
			Enter User Details
		</legend>
		<div>
			<%= f.label :fullName, 'Full Name' %>:
			<%= f.text_field :fullName, :size => 40 %>
		</div>
		<div>
			<%= f.label :name, 'Username' %>:
			<%= f.text_field :name, :size => 40 %>
		</div>
		<div>
			<%= f.label :password, 'Password' %>:
			<%= f.password_field :password, :size => 40 %>
		</div>
		<div>
			<%= f.label :password_confirmation, 'Confirm' %>:
			<%= f.password_field :password_confirmation, :size => 40 %>
		</div>
		<div>
			<%= f.label :address, 'Address' %>:
			<%= f.text_field :address, :size => 40 %>
		</div>
		<div>
			<%= f.label :emailAddress, 'Email Address' %>:
			<%= f.text_field :emailAddress, :size => 40 %>
		</div>
		<div>
			<%= f.label :classification, 'Classification' %>:
			<%= f.text_field :classification, :size => 40 %>
		</div>
		<div>
			<%= f.label :admin, 'Administrator' %>:
			<%= f.text_field :admin, :size => 10 %>
		</div>
		<div>
			<%= f.submit %>
		</div>
	</fieldset>
	<% end %>
</div>