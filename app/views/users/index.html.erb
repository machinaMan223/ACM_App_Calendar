<h1>Listing users</h1>
<% if notice %>
<p id="notice" >
	<%= notice %>
</p>
<% end %>
<table>
	<tr>
		<th>Name</th>
		<th>Username</th>
		<th>Address</th>
		<th>Classification</th>
		<th>Admin</th>
		<th>Paid</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.fullName %></td>
		<td><%= user.name %></td>
		<td><%= user.address %></td>
		<td><%= user.classification %></td>
		<td><%= user.admin %></td>
		<td><%= user.paid %></td>
		<td><%= link_to 'Show', user %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>
<br />
<%= link_to 'New User', new_user_path %> 