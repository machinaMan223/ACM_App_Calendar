<div id="product_list" >
	<h1>Listing events</h1>
	<table>
		<% @events.each do |event| %>
		<tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
			<td> <%= image_tag(event.icon, :class => 'list_image') %> </td>
			<td class="list_description" >
			<dl>
				<dt>
					<%= event.name %>
				</dt>
				<dd>
					<%= (event.start_at).to_formatted_s(:long_ordinal)  %>
				</dd>
				<dd>
					<%= event.address %>
				</dd>
				<dd>
					<%= truncate(strip_tags(event.description),
					:length => 80) %>
				</dd>
			</dl></td>
			<td class="list_actions" > <%= link_to 'Show', event %>
			<br/>
			<%= link_to 'Edit', edit_event_path(event) %>
			<br/>
			<%= link_to 'Destroy', event,
			:confirm => 'Are you sure?',
			:method => :delete %> </td>
		</tr>
		<% end %>
	</table>
</div>
<br />
<%= link_to 'New event', new_event_path %>