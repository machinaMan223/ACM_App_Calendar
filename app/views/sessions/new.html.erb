<div class="depot_form" >
	<% if flash[:alert] %>
	<p id="notice" >
		<%= flash[:alert] %>
	</p>
	<% end %>
	<%= form_tag do %>
	<fieldset>
		<legend>
			Please Log In
		</legend>
		<div>
			<label for="name" >Username:</label>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div>
			<label for="password" >Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
	<% end %>
	<br />
	Not a member? <%= link_to 'Register', users_new_path %> now!
</div>