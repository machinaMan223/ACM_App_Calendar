<!DOCTYPE html>
<html>
	<head>
		<title>VSU ACM</title>
		<!-- START:stylesheet -->
		<%= stylesheet_link_tag "two" %> <!-- END:stylesheet -->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		<%= yield :head %>
	</head>
	<div id="container">
		<div id="header">
			<h1> <%= @page_title || "VSU ACM" %> </h1>
		</div>
		<div id="navigation">
			<ul>
				<li>
					<%= link_to 'Home', acm_app_url %>
				</li>
				<li>
					<%= link_to 'Store', store_index_path %>
				</li>
				<li>
					<%= link_to 'Events', event_calendar_index_path %>
				</li>
				<li>
					<%= link_to 'Roster', roster_index_path %>
				</li>
				<% if session[:user_id] %>
					<% if @admin %>
						<li>
							<%= link_to 'Admin', admin_url %>
						</li>
					<% end %>
					<li>
						<%= link_to 'Logout', logout_path, :method => :delete %>
					</li>
				<% else %>
					<li>
						<%= link_to 'Login', login_path %>
					</li>
					<li>
						<%= link_to 'Register', users_new_path %>
					</li>
				<% end %>
			</ul>
		</div>
		<div id="content">
			<%= yield %>
			<%= yield :scripts %>
		</div>
	</div>
	</body>
</html>