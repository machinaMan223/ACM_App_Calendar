<!DOCTYPE html>
<html>
	<head>
		<title>VSU ACM</title>
		<!-- START:stylesheet -->
		<%= stylesheet_link_tag "two" %> <!-- END:stylesheet -->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="container">
			<div id="header">
				<h1> <%= @page_title || "VSU ACM" %> </h1>
			</div>
			<div id="navigation">
				<ul>
					<li>
						<%= link_to 'Home', acm_app_index_path %>
					</li>
					<li>
						<%= link_to 'Store', store_index_path %>
					</li>
					<li>
						<%= link_to 'Events', events_url %>
					</li>
					<li>
						<%= link_to 'Users', users_url %>
					</li>
				</ul>
			</div>
			<div id="content-container">
				<div id="content">
					<%= yield %>
				</div>
				<div id="aside">
					<% if !session[:cart_id].nil? %>
					<%= link_to "My Shopping Cart", cart_path(session[:cart_id]) %>
					<% else %>
					My Shopping Cart
					<% end %>
					<% if session[:user_id] %>
					<%= button_to 'Logout', logout_path, :method => :delete %>
					<% end %>
				</div>
			</div>
	</body>
</html>